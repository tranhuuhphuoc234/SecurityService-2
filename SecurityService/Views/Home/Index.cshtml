<script>
    $(document).ready(function () {
        $.ajax({
            method: "Get",
            url: 'http://localhost:54396/api/services',
            dataType: 'json',
            contentType: "application/json, charset=utf8",
            success: function (data) {
                var div_service = "<div class='module-service-content'>";
                var row = 0;
                var image = [];
                $.each(data, function (i, item) {
                    div_service += "<div class='service-item'>"
                        + "<div class='service-item-background-1' id='service"+row+"'>"
                        + "<div style='position: relative;height: 100%;background: rgba(0,0,0,0.3);'>"
                        + "<h2>" + item.name + "</h2>"
                        + "<div class='service-item-title-background'>"
                        + "<div class='service-item-title'>"
                        + "<p>" + item.name + "</p>"
                        + "<a onclick='click_view_more(this);' id_service='" + item.id + "' data-name='" + item.name + "' class='myBtn'> View more <i class='bi bi-arrow-right'></i> </a>"
                        + "</div>"
                        + "</div>"
                        + "</div>"
                        + "</div>"
                        + "</div>"
                    row++;
                });
                div_service += "</div>";
                $('.module-service-content').replaceWith(div_service);
                var row2 = 0;
                $.each(data, function (index, value) {
                    $('#service' + row2).css('background-image', "url(../img/" + value.image_service + ")");
                    row2++;
                });
            },
            error: function () {
                alert("error")
            }
        })
    });
    function click_view_more(a) {
        var name = $(a).attr("data-name");
        location.href = "Services/index?name=" + name;
    }


    
