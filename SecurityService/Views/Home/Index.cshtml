@{
    ViewData["Title"] = "Home Page";
    Layout = "_layout";
}
<style>
    .container {
        padding: 40px 0 50px;
    }
    .achivement-background {
        margin: 20px;
        background-color: #f5f5f7;
        box-shadow: 0px 0px 12px 6px #ddd;  
        
    }
        .achivement-background h1 {
            font-size: 50px;
            text-transform:uppercase;
            text-align:center;
            filter: drop-shadow(1px 1px 1px #5a5a5a);
        
        }

    .achivement {
        position: relative;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 50px 0 50px;
       
    }
        .achivement ul {
            position: relative;
            display: inline-flex;
            list-style: none;
            letter-spacing: 1px;
        }

            .achivement ul li {
                position: relative;
                padding: 50px;
            }
                .achivement ul li span {
                    font-size: 35px;
                    color: #3b5998;
                }
            .achivement .number{
                font-size:50px;
                font-weight:200;
            }
</style>

<div class="achivement-background">
    <div class="container">
        <h1 > OUR ACHIEVEMENTS </h1>
        <div class="achivement">
            <div class="achivement-title">
                <h1 style="font-weight:400;font-size:200px;"> 10 </h1>
                <h4> YEAR OF EXPERIENCE </h4>
            </div>
            <div class="achivement-content">

                <ul>
                    <li>
                        <span><i class="bi bi-heart-fill"></i></span>
                        <div class="number count"> 500 </div>
                        <div class="text"> Happy Clients </div>
                    </li>
                    <li>
                        <span><i class="bi bi-award-fill"></i></span>
                        <div class="number count"> 20 </div>
                        <div class="text"> Awards Won </div>
                    </li>
                    <li>
                        <span><i class="bi bi-person-plus-fill"></i></span>
                        <div class="number count"> 2500 </div>
                        <div class="text"> Guard </div>
                    </li>
                    <li>
                        <span><i class="bi bi-house-fill"></i></span>
                        <div class="number count"> 4 </div>
                        <div class="text"> Branches </div>
                    </li>

                </ul>

            </div>
        </div>

    </div>

</div>
@* our service *@
<div class="module">
    <div class="module-content">
        <div class="service-title ">
            <h1> Our Services</h1>
            <p> we happy serve you </p>
        </div>
        <div class="service-img">
        </div>
    </div>
</div>
<div class="module-service">
    <div class="module-service-content">
        <div class="service-item">
            @*background image*@
            <div class="service-item-background">
                <div style="position: relative;height: 100%;background: rgba(0,0,0,0.3);">
                    <h2> Manned Guarding </h2>
                    <div class="service-item-title-background">
                        <div class="service-item-title">
                            <p>
                                Also known as security guards, security officers, security personnel.
                            </p>
                            <a href="../MannedGuarding/Index" class="myBtn"> View more <i class="bi bi-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="service-item">
            @*background image*@
            <div class="service-item-background-1">
                <div style="position: relative;height: 100%;background: rgba(0,0,0,0.3);">
                    <h2> Electronic Security System </h2>
                    <div class="service-item-title-background">
                        <div class="service-item-title">
                            <p>Electronic security system refers to any electronic equipment that could perform security operations like surveillance, access control, alarming or an intrusion control to a facility or an area which uses power from mains and also a power backup like a battery, etc.</p>
                            <a href="../MannedGuarding/Index" class="myBtn"> View more <i class="bi bi-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="service-item">
            @*background image*@
            <div class="service-item-background-2">
                <div style="position: relative;height: 100%;background: rgba(0,0,0,0.3);">
                    <h2> Cash Service </h2>
                    <div class="service-item-title-background">
                        <div class="service-item-title">
                            <p>Cash management, also known as treasury management, is a process that involves collecting and managing cash flows.</p>
                            <a href="../MannedGuarding/Index" class="myBtn"> View more <i class="bi bi-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="service-item">
            @*background image*@
            <div class="service-item-background-3">
                <div style="position: relative;height: 100%;background: rgba(0,0,0,0.3);">
                    <h2> Recruitment & Training </h2>
                    <div class="service-item-title-background">
                        <div class="service-item-title">
                            <p> Training involves providing a range of planned activities that enable an employee to develop the skills, attitudes and knowledge required by the organisation and the work required. </p>
                            <a href="../MannedGuarding/Index" class="myBtn"> View more <i class="bi bi-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/phuoc.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>